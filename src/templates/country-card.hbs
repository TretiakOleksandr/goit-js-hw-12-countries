<div class="container">
    <h1 class="country-name">{{name}}</h1>
    <div class="info">
            <div class="text-info">
                <h2>Capital: {{capital}}</h2>
                <h2>Population: {{population}}</h2>
                <h2>Languages:</h2>
                <ul>
                    {{#each languages}}
                    <li>{{this.name}}</li>
                    {{/each}}
                </ul>
            </div>
            <img class="flag" src={{flag}} alt={{name}} />
    </div>
</div>